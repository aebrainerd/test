{
  "manifest_version": 3,
  "name": "Tweet Entropy Overlay",
  "description": "Overlay per-token entropy and surprise metrics on Tweets (X).",
  "version": "1.0.0",
  "permissions": ["storage"],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content.js"],
      "css": ["overlay.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html"
}
